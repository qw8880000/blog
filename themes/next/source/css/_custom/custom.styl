// Custom styles.

if hexo-config("custom_css.post_body_a.enable")
  .post-body
    a{
      color: convert(hexo-config("custom_css.post_body_a.normal_color"));
      border-bottom: none;
      &:hover {
        color: convert(hexo-config("custom_css.post_body_a.hover_color"));
        text-decoration: underline;
      }
    }

if hexo-config("custom_css.post_meta_a.enable")
  .post-meta
    a{
      color: convert(hexo-config("custom_css.post_meta_a.normal_color"));
      border-bottom: none;
      &:hover {
        color: convert(hexo-config("custom_css.post_meta_a.hover_color"));
        text-decoration: underline;
      }
    }

if hexo-config("custom_css.post_body_h1.enable")
  .posts-expand .post-body
    h1{
      border-bottom: 3px solid #00a3cf;
      /* background-color: rgb(243, 243, 243); */
      /* box-shadow: rgb(153, 153, 153) 1px 1px 2px; */
      padding: 5px 0 5px 10px;
    }

if hexo-config("custom_css.post_body_h2.enable")
  .posts-expand .post-body
    h2{
      border-left: 3px solid #00a566;
      padding: 0 0 0 10px;
      margin-left: 10px;
    }


.sidebar-category{
  .sidebar-category-list{
    list-style-type: none;
    margin: 0;
    padding: 0;
    text-align: center;
  }
  .sidebar-category-list-item{
    display: block;
    margin: 0 10px;
    list-style: none;
  }
  .sidebar-category-list-link{
    /* display: block; */
    display: inline-block;
    font-size: 13px;
    line-height: inherit;
    border-bottom: 1px solid $menu-link-border;
    transition-property: border-color;
    the-transition();

    &:hover { border-bottom-color: $menu-link-hover-border; }
  }
  .sidebar-category-list-count{
    display: inline-block;
    padding: 2px 5px;
    font-weight: 700;
    line-height: 1;
    color: #fff;
    text-align: center;
    white-space: nowrap;
    /* vertical-align: middle; */
    background-color: $grey-light;
    border-radius: 10px;
    /* float: right; */
    margin: 0.35em 0.9em 0 0;
    text-shadow: 1px 1px 0px rgba(0,0,0,0.1);
  }
}


